{
   "variables": {
     "iso_path": "file:///C:/CB_Lab/_iso-images",
     "iso_name": "ubuntu-14.04.3-server-amd64.iso",
     "iso_checksum": "0501c446929f713eb162ae2088d8dc8b6426224a",
     "iso_checksum_type": "sha1",
     "preseed": "preseed-1404.cfg",
     "vm_name": "Ubuntu-14.04LTS-packer",
     "host_name": "ubt1404",
     "file_output": "ubt1404-min.box"
   },


  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "http_directory": "http",
      "headless": false,
      "iso_url": "{{ user `iso_path` }}/{{ user `iso_name` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "vm_name": "{{ user `vm_name` }}",
      "disk_size": 10240,
      "vboxmanage": [
           ["modifyvm", "{{.Name}}", "--memory", "1024"],
           ["modifyvm", "{{.Name}}", "--cpus", "1" ],
           ["modifyvm", "{{.Name}}", "--usb", "off"],
           ["modifyvm", "{{.Name}}", "--audio", "none"]
      ],
      "boot_wait": "10s",
      "boot_command": [
          "<esc><wait>",
          "<esc><wait>",
          "<enter><wait>",
          "/install/vmlinuz<wait>",
          " auto<wait>",
          " console-setup/ask_detect=false<wait>",
          " console-setup/layoutcode=us<wait>",
          " console-setup/modelcode=pc105<wait>",
          " debconf/frontend=noninteractive<wait>",
          " debian-installer=en_AU<wait>",
          " fb=false<wait>",
          " initrd=/install/initrd.gz<wait>",
          " kbd-chooser/method=us<wait>",
          " keyboard-configuration/layout=USA<wait>",
          " keyboard-configuration/variant=USA<wait>",
          " locale=en_AU<wait>",
          " netcfg/get_domain=cloud.lab<wait>",
          " netcfg/get_hostname={{ user `host_name` }}<wait>",
          " noapic<wait>",
          " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}<wait>",
          " -- <wait>",
          "<enter><wait>"
      ],
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    }
  ],


  "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
            "override": {
                "virtualbox-iso": {
                    "scripts": [
                        "scripts/1st-run.sh",
                        "scripts/vagrant.sh",
                        "scripts/docker.sh",
                        "scripts/virtualbox.sh",
                        "scripts/cleanup.sh",
                        "scripts/zerodisk.sh"                    ]
                }
            }
        }
  ],


  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "packer_cache/{{ user `file_output` }}"
        }
      }
    }
  ]
}
